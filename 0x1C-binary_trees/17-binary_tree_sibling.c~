#include "binary_trees.h"

binary_tree_t *binary_tree_sibling(binary_tree_t *node)
{
	binary_tree_t *parent, *sibling;

	parent = node->parent;
	if (!parent)
		return (NULL);
	if (parent->left == node)
		sibling = parent->right;
	else if (parent->right == node)
		sibling = parent->left;
	return (sibling);
}
